<?xml version="1.0" encoding="utf-8"?>
<installer-script minSpecVersion="1">
    <title>PLACEHOLDER_PKG_TITLE</title>
    <options customize="never" rootVolumeOnly="false"/>
    <domains enable_anywhere="true" enable_currentUserHome="true" enable_localSystem="false"/>
    <choices-outline>
        <line choice="dtu-python"/>
    </choices-outline>
    <choice id="dtu-python" title="DTU Python Environment" description="PLACEHOLDER_PKG_DESCRIPTION" start_selected="true" start_enabled="true" start_visible="true">
        <pkg-ref id="PLACEHOLDER_PKG_ID"/>
    </choice>
    <pkg-ref id="PLACEHOLDER_PKG_ID" version="PLACEHOLDER_VERSION">#PLACEHOLDER_PKG_NAME-PLACEHOLDER_VERSION.pkg</pkg-ref>
</installer-script>